<div class="box text-center">
  <div class="content bg-white rounded">
    <h2 class='signinh2 h3 mb-3'> <%= t("devise.edit_user") %> </h2>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field mt-2">
    <%= f.label :name, class:'label-text',value: t('devise.name')  %>
    <%= f.text_field :name, autofocus: true, class:"form-control", placeholder: t('devise.name')%>
    </div>
  
    <div class="field mt-2">
    <%= f.label :nick_name, class:'label-text',value: t('devise.nick_name') %>
    <%= f.text_field :nick_name, autofocus: true, class:"form-control", placeholder:t('devise.nick_name') %>
    </div>
  
    <div class="field mt-2">
    <%= f.label :email, class:'label-text',value: t('devise.email') %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:t('devise.email') %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field mt-2">
    <%= f.label :password, class:'label-text',value: t('devise.password')%> 
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: t("devise.password"), id:"tooltipEdit", data: {toggle: "tooltip", placement: "right", animation: true }, title: t("devise.leave_blank") %>
    </div>
  
    <div class="field mt-2">
    <%= f.label :password_confirmation, class:'label-text', value: t('devise.password_confirm') %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: t("devise.password_confirm")  %>
    </div>
  
    <div class="field mt-2">
    <%= f.label :current_password, class:'label-text', value: t("devise.current_password") %>
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder:t("devise.current_password"), id:"tooltipEdit2", data: {toggle: "tooltip", placement: "right", animation: true }, title: t("devise.need_password") %>
    </div>
  
    <div class="actions">
    <%= f.submit t("devise.update"), class:'btn btn-info mt-3'%>
    </div>
    <% end %>
  
    <%= button_to t("devise.cancel"), registration_path(resource_name), data: { confirm: "真的嗎QAQ" }, method: :delete, class:'btn btn-danger btn-sm mt-1' %>
  
    <%= link_to t("devise.back"), my_groups_path, class:'btn btn-sm btn-dark'  %>
  </div>

</div>

<script>
  $('#tooltipEdit').tooltip('show')
  $('#tooltipEdit2').tooltip('show')
</script>