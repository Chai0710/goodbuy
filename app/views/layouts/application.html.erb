<!DOCTYPE html>
<html>
  <head>
    <title>Goodbuy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <% if params[:controller] == 'groups' %>
      <%= stylesheet_link_tag    'groups', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>

    <% if (params[:controller] == 'groups') && (params[:action] == 'new') %>
      <%= stylesheet_link_tag    'groups_new', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>

  </head>

  <body>
    <%= yield %>
    <% if (params[:controller] == 'groups') && (params[:action] == 'new') %>
      <%= javascript_include_tag  'groups_new', 'data-turbolinks-track': 'reload' %>
    <% end %>
  </body>
</html>
