            <div class="products col-6">
              <% @products.each do |p| %>
                <div class="product">
                  <%= radio_button_tag(:p, p.price ) %> <%= p.name %> <%= p.price %>元
                </div>
              <% end %>
            </div>
            <div class="options col-6">
              <% @options.each do |o| %>
                <div class="option">
                  <%= check_box_tag(:o, o.price) %>
                  <%= o.name %> <%= o.price %>元
                </div>
              <% end %>
            </div>
          </div>
          <div class="rounded mt-3">總金額：<span class="total-price"></span></div>
          <%= link_to "提交", checkout_group_path, class:'mt-3 btn btn-success btn-sm' %>
        </form>
      </div>

