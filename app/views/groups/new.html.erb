

<h1 class="mt-5 text-center">
來開團囉！ <br>
<%= link_to "回到團購紀錄", my_groups_path, class: "btn btn-success" %>
</h1>

<div class="container mt-5">
    <div id="tab-demo" class="m-auto">
        <ul class="tab-title">
            <li><a href="#tab01">店家資訊</a></li>
            <li><a href="#tab02">菜單</a></li>
            <li><a href="#tab03">選項</a></li>
        </ul>
        <div id="tab01" class="tab-inner">
            <%= simple_form_for(@group) do |form| %>
                <%= form.input :shop_photo, label: '照片' %>
                <%= form.input :title, label: "團名" %> 
                <%= form.input :address, label: "店家地址" %> 
                <%= form.input :phone, label: "店家電話" %> 
                <%= form.input :description, label: "描述" %>
        </div>
        <div id="tab02" class="tab-inner">
            <div id="products">
                <%= form.simple_fields_for :products do |product| %>
                <%= render 'product_fields', f: product %>
                <% end %>
                <div class="links">
                <%= link_to_add_association '新增菜單', form, :products, class: "btn, btn-success btn-sm" %>
                </div>
            </div>
        </div>
        <div id="tab03" class="tab-inner">
            <%= form.simple_fields_for :options do |option| %>
            <%= render 'option_fields', f: option %>
            <% end %>
            <div class="links">
            <%= link_to_add_association '新增選項', form, :options, class: "btn, btn-success btn-sm"  %>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row">
    <%= form.button :submit, value: "確定開團",class:"btn btn-danger mt-5 m-auto btn-lg"  %>
    </div>
    <% end %>
</div>
