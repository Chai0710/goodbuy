  <div id="wrapper">
    <%= render 'shared/sidebar' %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid mt-5">

          <!-- Page Heading -->
          <h1 class="h3 text-heading"> <%= t("groups.public_group") %> </h1>

          <!-- DataTales Example -->
          <div class="card shadow mb-3">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-dark"> <%= t("groups.record_list") %> </h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th><%= t("groups.link") %></th>
                      <th><%= t("groups.group_name") %></th>
                      <th><%= t("groups.comment") %></th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th><%= t("groups.link") %></th>
                      <th><%= t("groups.group_name") %></th>
                      <th><%= t("groups.comment") %></th>
                    </tr>
                  </tfoot>
                  <tbody></tbody>
                  <% @groups.each do |group| %>
                    <tr>
                      <td> <%= link_to t("groups.create_group"),new_group_path(:group_id => group.id), class: "btn btn-o" %> </td>
                      <td> <%= group.title %> </td>
                      <td> <%= group.description %>  </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->
      <%= render "footer" %>
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

