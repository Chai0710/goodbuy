<body id="page-top">

    <%= render 'shared/sidebar' %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid mt-5">

          <!-- Page Heading -->
          <h1 class="h3 text-heading">既有團</h1>

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-dark">紀錄列表</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>連結</th>
                      <th>團名</th>
                      <th>備註</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>連結</th>
                      <th>團名</th>
                      <th>備註</th>
                    </tr>
                  </tfoot>
                  <tbody></tbody>
                  <% @groups.each do |group| %>
                    <tr>
                      <td> <%= link_to "開團",new_group_path(:group_id => group.id) %> </td>
                      <td> <%= group.title %> </td>
                      <td> <%= group.description %>  </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->
      <%= render "footer" %>
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->
</body>

</html>
